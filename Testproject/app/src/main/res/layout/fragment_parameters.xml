<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ParametersFragment">

    <TextView
        android:id="@+id/text_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/batch_text"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Changing neural network parameters"
        />

    <TextView
        android:id="@+id/batch_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="@id/batch_text"
        app:layout_constraintBottom_toTopOf="@id/batch_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="225dp"
        android:layout_marginStart="15dp"
        android:labelFor="@id/batch_text"
        android:text="Batch size:"
        />
    <EditText
        android:id="@+id/batch_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:autofillHints="username"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/epoch_label"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/batch_label"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edit_text_background"
        />

    <TextView
        android:id="@+id/epoch_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/batch_text"
        app:layout_constraintLeft_toLeftOf="@id/epoch_text"
        app:layout_constraintBottom_toTopOf="@id/epoch_text"
        android:labelFor="@id/epoch_text"
        android:layout_marginStart="15dp"
        android:text="Epochs:"
        />
    <EditText
        android:id="@+id/epoch_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/epoch_label"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edit_text_background"
        />

    <TextView
        android:id="@+id/layer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/epoch_text"
        app:layout_constraintLeft_toLeftOf="@id/layer_text"
        app:layout_constraintBottom_toTopOf="@id/layer_text"
        android:labelFor="@id/layer_text"
        android:layout_marginStart="15dp"
        android:text="Layers:"
        />
    <EditText
        android:id="@+id/layer_text"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layer_label"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/edit_text_background"
        />

    <Button
        android:id="@+id/back_btn"
        android:text="Back"
        android:textSize="20sp"
        android:layout_width="157dp"
        android:layout_height="76dp"
        app:layout_constraintRight_toLeftOf="@id/retrain_btn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <Button
        android:id="@+id/retrain_btn"
        android:text="Retrain"
        android:textSize="20sp"
        android:layout_width="157dp"
        android:layout_height="76dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/back_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>